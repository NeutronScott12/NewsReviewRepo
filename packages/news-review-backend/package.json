{
    "name": "@thelasthurrah/news-review-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "migrate:generate": "npm run prisma:migrate && npm run prisma:generate",
        "prisma:migrate": "npx prisma migrate dev",
        "prisma:generate": "npx prisma generate",
        "prisma:reset": "npx prisma reset",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:build": "docker-compose build",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "npx cross-env NODE_ENV=development && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "npx cross-env NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/apollo": "^10.0.14",
        "@nestjs/class-validator": "^0.13.4",
        "@nestjs/common": "^8.4.6",
        "@nestjs/config": "^2.1.0",
        "@nestjs/core": "^8.4.6",
        "@nestjs/graphql": "^10.0.15",
        "@nestjs/jwt": "^8.0.1",
        "@nestjs/mercurius": "^10.0.14",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.4.6",
        "@prisma/client": "^3.14.0",
        "@thelasthurrah/the-last-hurrah-shared": "^0.1.11",
        "apollo-server-cache-redis": "^3.3.1",
        "apollo-server-core": "^3.8.2",
        "apollo-server-express": "^3.8.2",
        "cache-manager": "^4.0.1",
        "cache-manager-redis-store": "^2.0.0",
        "cross-env": "^7.0.3",
        "graphql": "^16.5.0",
        "joi": "^17.6.0",
        "mercurius": "^9.8.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.2.0",
        "@nestjs/cli": "^8.2.6",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/testing": "^8.4.6",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.1",
        "@types/joi": "^17.2.3",
        "@types/node": "^17.0.40",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.1",
        "prettier": "^2.6.2",
        "prisma": "^3.14.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.4",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.1",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
